{
  "name": "doel3d",
  "version": "1.0.0",
  "description": "DOEL3D - STL Print Cost Calculator Full Stack Application",
  "private": true,
  "scripts": {
    "dev": "./start-dev.sh",
    "start:dev": "./start-dev.sh",
    "start:be": "cd be && npm run start:dev",
    "start:fe": "cd fe && npm run dev",
    "install:all": "npm run install:be && npm run install:fe",
    "install:be": "cd be && npm install",
    "install:fe": "cd fe && npm install",
    "build:all": "npm run build:be && npm run build:fe",
    "build:be": "cd be && npm run build",
    "build:fe": "cd fe && npm run build",
    "clean": "rm -rf be/node_modules fe/node_modules be/dist fe/.next",
    "db:start": "cd be && npm run db:start",
    "db:stop": "cd be && npm run db:stop",
    "db:restart": "cd be && npm run db:restart",
    "db:status": "cd be && npm run db:status",
    "db:studio": "cd be && npm run db:studio",
    "db:adminer": "cd be && npm run db:adminer",
    "lint:be": "cd be && npm run lint",
    "lint:fe": "cd fe && npm run lint",
    "lint:all": "npm run lint:be && npm run lint:fe"
  },
  "keywords": [
    "3d-printing",
    "stl",
    "cost-calculator",
    "nestjs",
    "nextjs",
    "prisma",
    "postgresql",
    "graphql"
  ],
  "author": "Abdul Halim",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "be",
    "fe"
  ]
}
